<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0000000"
        android:id="@+id/view_frame">

    </View>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/main_button"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_button_sub"/>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/camera"
        android:layout_toRightOf="@id/main_button_sub"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/imageview_camera"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pencil_w"
        android:layout_toLeftOf="@+id/main_button_sub"
        android:layout_marginTop="435dp"
        android:layout_marginRight="60dp"
        android:id="@+id/imageview_pencil"
        />

</RelativeLayout>